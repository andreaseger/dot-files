#!/bin/sh

cd /home/ane/build/acpi_call
make
make load
echo '\_SB.PCI0.P0P1.VGA._OFF' > /proc/acpi/call
result=$(cat /proc/acpi/call)
case "$result" in                                                                                                                                                     
  Error*)                                                                                                                                                           
    echo "failed"                                                                                                                                                 
    ;;                                                                                                                                                                
  *)                                                                                                                                                                
    echo "works!"                                                                                                                                                 
    # break # try out outher methods too                                                                                                                          
    ;;                                                                                                                                                                
esac 
