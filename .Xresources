! -- Fonts -- ! {{{
! URxvt.font: xft:Consolas:regular:size=11
! URxvt.boldFont: xft:Consolas:bold:size=11
URxvt.font: xft:Source Code Pro:size=11:style=Regular
URxvt.boldFont: xft:Source Code Pro:size=11:style=Bold
URxvt.letterSpace: -2
! }}}

URxvt.saveLines: 5000
URxvt.scrollBar: false
URxvt.secondaryScroll: true
URxvt.internalBorder: 0
URxvt.matcher.button: 1
!URxvt*inheritPixmap: true
!URxvt*shading: 70

URxvt.perl-ext:
URxvt.perl-ext-common: clipboard
!URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
!URxvt.url-select.launcher:  chromium
!URxvt.url-select.underline: true
!URxvt.keysym.M-u:           perl:url-select:select_next

!URxvt.keysym.M-Escape:      perl:keyboard-select:activate
!URxvt.keysym.M-s:           perl:keyboard-select:search

URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! Make it old-school.
URxvt.cursorBlink: true

! Sorry Vim, 8th bit meta is just broken.
URxvt.meta8: false

! vim:foldmethod=marker:foldlevel=0
